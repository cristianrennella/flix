%article.video_category
  - @categories.each do |category|
    %header
      %h3= link_to category.name, category_path(category)
    .videos.row
      - category.most_recent_videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video), nil do
            %img(src="tmp/#{video.small_cover_url}")